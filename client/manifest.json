{
	"manifest_version": 2,
	"name": "Media-Share Client",
	"version": "1.0.0",
	"description": "Web Browser Extension for Media Share",
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/watch*",
				"*://*.netflix.com/watch/*",
				"*://*.hulu.com/watch/*"
			],
			"js": [
				"assets/js/jquery.min.js",
				"src/extension.js"
			]
		}
	],
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"48": "/icon.svg"
		},
		"default_title": "Media Share",
		"default_popup": "src/popup.html"
	},

	"permissions": [
		"storage"
	]
}